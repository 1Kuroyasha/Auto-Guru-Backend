{
	"compilerOptions": {
		/* Language and Environment */
		"target": "es2015",

		/* Modules */
		"module": "commonjs",
		"rootDir": "./src",

		/* Emit */
		"outDir": "./dist",
		"removeComments": true,

		/* Interop Constraints */
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,

		/* Type Checking */
		"strict": true,
		"noImplicitAny": true,
		"strictFunctionTypes": true,
		"noImplicitThis": true,

		/* Completeness */
		"skipLibCheck": true,

		/* To Debug */
		"sourceMap": true
	}
}
